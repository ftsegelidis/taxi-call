<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background" >

    <ImageButton
        android:id="@+id/imageButtonEndRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:onClick="onClickEndRide"
        android:src="@drawable/button_endride" />

    <ImageButton
        android:id="@+id/imageButtonStartRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonEndRide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:onClick="onClickStartRide"
        android:src="@drawable/button_startride" />

</RelativeLayout>
